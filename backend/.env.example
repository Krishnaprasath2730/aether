# ==============================================
# Aether Backend - Environment Variables
# ==============================================
# Copy this file to .env and fill in the values.

# Server Port (Render/Railway will set this automatically)
PORT=8080

# MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/aether

# JWT Secret (use a strong random string!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=https://your-app.vercel.app

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://aether-backend.onrender.com/api/auth/google/callback

# Email (optional, for OTP/notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=
